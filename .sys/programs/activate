tContents = {test}
end
--Print a specific line
print(tContents[15])


--Modify a specific line
table.remove(tContents, 15) -- will remove line 3 so we can insert the new line 3
table.insert(tContents, 15, "activated = true") -- inserts the string "New Infomation" on line 3 in the table.

--Convert table to string and save the file
sContents = textutils.serialize(tContents)
local file = io.open("/.sys/config/HuskyOSconf", "w")
file:write(sContents)
file:close()
   
